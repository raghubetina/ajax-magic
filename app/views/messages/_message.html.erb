<div id="<%= dom_id message %>" class="list-group-item">
  <div class="d-flex justify-content-between align-items-baseline">
    <div class="fw-bold text-muted">
      <%= message.author %>
    </div>

    <div class="d-flex gap-2 small">
      <% if current_user == message.author %>
        <%= link_to "Edit", edit_message_path(message), class: "text-muted", data: { turbo_stream: true } %>

        <%= link_to "Delete", message, data: { turbo: true, turbo_method: "delete" }, class: "text-muted" %>
      <% end %>

      <div class="text-muted">
        <%= time_ago_in_words(message.created_at) %> ago
      </div>
    </div>
  </div>

  <div>
    <%= message.content %>
  </div>
</div>
